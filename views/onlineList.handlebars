<html>
        <head>
            <title>
                Node.js chat
            </title>
            <style>
                #contentWrap{
                    display: none;
                }
                #chatWrap{
                    float: left;
                }
                #chat{
                    position: relative;
                    width: 100%;
                    float:left;
                    min-height:100px;
                    height: 90%;
                    overflow: auto;
                }
            </style>
            
            <script src="https://code.jquery.com/jquery.js"></script>
            
            <!-- Latest compiled and minified CSS -->
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    
            <!-- Optional theme -->
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css">
    
            <!-- Latest compiled and minified JavaScript -->
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
            
        </head>
        <body>
        
            <div class="container">
            
                <div class="page-header">
                    <h1>Picina de la muerto </h1>         
                    
                    
                    <div class="col-md-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                Dealers
                            </div>
                            <form method="get" action="/chat/chatroom">
                                <div id="users" class="panel-body">
                                {{#each dealers}}
                                    <p>{{role}}: {{name}}</p>
                                    <button class="btn btn-lg btn-primary" type="submit" value="Submit" id="sndChat">Chat</button>
                                {{/each}}
                                </div>
                            </form>
                        </div>
                    </div>
                    
                </div>
                
            </div>
            <script src="socket.io/socket.io.js"></script>
            <script src="../api/controllers/chat.js"></script>
            
            <script>
                jQuery(function($) {
                   var socket = io.connect();
                   var $users = $('#users');

                   
                   socket.on('usernames', function(data) {
                        var html = '';
                        for (var username in data) {
                            html += username + '<br/>';
                        }
                        $users.html(html);
                    });
                   
                });
                
            </script>
        </body>
    </html>